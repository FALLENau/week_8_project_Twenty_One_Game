<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/background"
tools:context="com.example.whitepaw.myblackjack.GameActivity">


<Button
    android:id="@+id/hit_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="74dp"
    android:onClick="onClickHitButton"
    android:text="Hit"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="70dp"
    app:layout_constraintTop_toBottomOf="@+id/result_text" />

<Button
    android:id="@+id/hold_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="79dp"
    android:layout_marginTop="70dp"
    android:onClick="onClickHoldButton"
    android:text="Hold"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/result_text" />

<TextView
    android:id="@+id/hand_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your cards are:"
    android:background="@color/colorPrimary"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="90dp"
    android:textSize="24sp"
    app:layout_constraintHorizontal_bias="0.501" />

<TextView
    android:id="@+id/result_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_marginRight="8dp"
    android:textSize="24sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="22dp"
    app:layout_constraintTop_toBottomOf="@+id/hand_value" />

<TextView
    android:id="@+id/hand_value"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="23dp"
    android:text=""
    android:textSize="24sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/hand_text" />

<Button
    android:id="@+id/restart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:onClick="onReset"
    android:text="Button"
    tools:layout_editor_absoluteX="136dp"
    android:layout_marginTop="34dp"
    app:layout_constraintTop_toBottomOf="@+id/hit_button" />

    <TextView
        android:id="@+id/name_game_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="163dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/hand_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


</android.support.constraint.ConstraintLayout>
